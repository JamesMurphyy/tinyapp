<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (username) { %>
      <form action="/logout" method="POST" style="margin:150">
        <label for="username" style = "font-size: 16px">Logged in as: <%= username %>!</label>
        <button type="submit" class="btn btn-danger" style="display: inline-block ; padding: 4px 5px">Logout</button>
      </form>
    <% } else { %>
      <form action="/login" method="POST" style="margin:150">
        <label for="username" style = "font-size: 16px">Enter a username:</label>
        <input type="text" name="username" style = "display: inline-block" placeholder = "Username">
        <button type="submit" class="btn btn-primary" style="display: inline-block ; padding: 4px 5px;">Submit</button>
      </form>
    <% } %>
  </nav>
</header>



